{{yield
  (hash
    error=(hash
      component=(component componentState.error.component data=componentState.error.data)
      isActive=componentState.error.isActive
    )
    success=(hash
      component=(component componentState.success.component data=componentState.success.data)
      isActive=componentState.success.isActive
    )
    loading=(hash
      component=(component componentState.loading.component)
      isActive=componentState.loading.isActive
    )
  )
}}
